---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="py-10 px-4 max-w-xl mx-auto">
    <h1 class="text-3xl font-semibold mb-6">Contáctanos</h1>
    <form class="space-y-4">
      <div>
        <label class="block mb-1 font-medium" for="name">Nombre</label>
        <input
          type="text"
          id="name"
          class="w-full p-2 border rounded"
          placeholder="Tu nombre"
        />
      </div>
      <div>
        <label class="block mb-1 font-medium" for="email">Email</label>
        <input
          type="email"
          id="email"
          class="w-full p-2 border rounded"
          placeholder="tucorreo@example.com"
        />
      </div>
      <div>
        <label class="block mb-1 font-medium" for="message">Mensaje</label>
        <textarea
          id="message"
          rows="5"
          class="w-full p-2 border rounded"
          placeholder="Escríbenos tu consulta..."></textarea>
      </div>
      <button
        type="submit"
        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
      >
        Enviar
      </button>
    </form>
  </section>
</Layout>
